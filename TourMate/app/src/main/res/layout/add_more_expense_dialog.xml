<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="5dp"
        android:text="     Add New Expense       "
        android:textColor="@color/sky2"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Amount"
        android:layout_marginTop="10dp"
        android:textColor="@color/signUpColor"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/add_amountEDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:drawableLeft="@drawable/doller1"
        android:drawablePadding="5dp"
        android:maxLength="8"
        android:textSize="22sp"
        android:hint="Enter expense amount"
        android:textColorHint="#817D7D"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Type"
        android:layout_marginTop="10dp"
        android:textColor="@color/signUpColor"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/add_typeEDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:drawableLeft="@drawable/type2"
        android:drawablePadding="5dp"
        android:maxLength="25"
        android:textSize="20sp"
        android:hint="Enter expense type"
        android:textColorHint="#817D7D"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description (if any)"
        android:layout_marginTop="10dp"
        android:textColor="@color/signUpColor"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/add_descripTionEDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:drawableLeft="@drawable/type2"
        android:drawablePadding="5dp"
        android:maxLength="20"
        android:textSize="22sp"
        android:hint="Enter some description "
        android:textColorHint="#817D7D"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/add_cancelBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Cancel"
            android:textSize="22sp"
            android:padding="7dp"
            android:textStyle="bold"
            android:textColor="@color/pink"/>


        <TextView
            android:id="@+id/add_addBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add     "
            android:padding="7dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/pink"/>


    </RelativeLayout>


</LinearLayout>