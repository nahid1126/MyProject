<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:cardElevation="1dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="#050B2C"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_destinationTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:text="tour destination"
                android:textColor="@color/sky2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/row_startDateTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="Starts on : 00/00/0000"
                    android:padding="2dp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/row_EndDateTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:gravity="right"
                    android:text="End date : 00/00/0000"
                    android:padding="2dp"
                    android:textSize="16sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="12"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/sky2"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="Tour Budget "
                    android:padding="1dp"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/row_budgetTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="Tk : 0000000000000000"
                    android:padding="1dp"
                    android:textSize="17sp"/>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>