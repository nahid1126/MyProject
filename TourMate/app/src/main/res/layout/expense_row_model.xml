<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardCornerRadius="3dp"

        app:cardBackgroundColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:weightSum="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.4"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="6.6"
                        android:paddingBottom="4dp"
                        >
                        <TextView
                            android:id="@+id/row_expenseTypeTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.6"
                            android:text=" typeName"
                            android:textSize="17sp"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:id="@+id/row_expenseAmountTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="1"
                            android:padding="3dp"
                            android:text="000000000000"
                            android:textColor="#058DF8"
                            android:textSize="17sp"
                           android:gravity="center"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/row_dateTimeTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingBottom="5dp"
                        android:text="04-25-2019 4:25 am"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:id="@+id/menuBtTv"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="2dp"
                    android:drawableLeft="@drawable/menubar"
                    android:layout_height="match_parent"/>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>